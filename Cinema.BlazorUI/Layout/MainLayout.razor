@inherits LayoutComponentBase
@* @using Cinema.UI..Layout *@
@inject NavigationManager NavigationManager

@namespace Cinema.BlazorUI.Layout

<div class="page">
    <header>
        <NavMenu />
    </header>

    <main>
        @Body
    </main>

    @if (!ShouldHideFooter())
    {
        <footer>
            <FooterMenu />
        </footer>
    }
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>


@code {
    private bool ShouldHideFooter()
    {
        if (NavigationManager == null) return false;
        
        var currentUrl = NavigationManager.Uri.ToLower();
        return currentUrl.EndsWith("/login") || 
               currentUrl.EndsWith("/register") ||
               currentUrl.EndsWith("/forgot-password");
        // Add more pages where footer should be hidden
    }
}